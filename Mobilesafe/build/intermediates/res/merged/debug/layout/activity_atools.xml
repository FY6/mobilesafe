<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3fdfd"
    android:orientation="vertical">

    <TextView
        style="@style/styleTitle"
        android:text="高级工具" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:clickable="true"
        android:drawableLeft="@drawable/call_log_missing_call_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="numberAddressQuery"
        android:padding="10dp"
        android:text="电话归属地查询"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:clickable="true"
        android:drawableLeft="@drawable/firewall_tab_icon_phone_focused"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="commonNuberQuery"
        android:padding="10dp"
        android:text="常用号码查询"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:clickable="true"
        android:drawableLeft="@drawable/kn_protection_huanka"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="smsBackup"
        android:padding="10dp"
        android:text="备份短信"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:clickable="true"
        android:drawableLeft="@drawable/progress_icon_pressed"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="appLocks"
        android:padding="10dp"
        android:text="程序锁"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:clickable="true"
        android:drawableLeft="@drawable/img1"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="appRecomment"
        android:padding="10dp"
        android:text="软件推荐"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</LinearLayout>
