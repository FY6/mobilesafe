<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingItemView"><attr format="string" name="title"/><attr format="string" name="desc_on"/><attr format="string" name="desc_off"/></declare-styleable>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="widget_margin">8dp</dimen>
    <string name="add_widget">Add widget</string>
    <string name="app_name">手机卫士</string>
    <string name="appwidget_text">EXAMPLE</string>
    <string name="hello_blank_fragment">Hello blank fragment</string>
    <string name="hello_world">Hello world!</string>
    <string name="sample_device_admin">超级设备管理器</string>
    <string name="sample_device_admin_description">有了超级设备管理器，可以一键锁屏，清除数据，很NB</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
             Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, 
			while customizations related to backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/myprogress_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <style name="MyProgressBar_Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/myprogress_horizontal</item>
    </style>
    <style name="styleContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:drawableLeft">@android:drawable/star_big_on</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="styleNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">next</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">下一步</item>
    </style>
    <style name="stylePrevious">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:onClick">previous</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">上一步</item>
    </style>
    <style name="styleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#8866ff00</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>
</resources>